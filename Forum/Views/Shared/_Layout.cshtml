<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Forum</title>
    <link href="~/Content/Images/logo.png" rel="icon" type="image/svg" />
    <link href="~/Content/Styles/flexselect.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/Styles/ModalDialog.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/Form.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Content/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/Site.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/jquery.flexselect.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/liquidmetal.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        @RenderBody()
        <footer>
            <p>By Rostislav Zalevsky &copy; @DateTime.Now.AddHours(3).Year</p>
        </footer>
    </div>
    @{
        if (TempData["Alert"] != null)
        {
            <script>
            alert("@TempData["Alert"].ToString()");
            </script>
            TempData.Remove("Alert");
        }
    }
</body>
</html>